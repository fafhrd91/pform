{% if not errors %}
<div class="alert alert-error">
  <a class="close" data-dismiss="alert">×</a>
  Please fix indicated errors.
</div>
{% else %}
<div class="alert alert-block alert-error">
  <a class="close" data-dismiss="alert">×</a>
  <h4 class="alert-heading">Please fix indicated errors.</h4>
  <ul>
    {% for err in errors %}
      <li>{{err|safe}}</li>
    {% endfor %}
  </ul>
</div>
{% endif %}
