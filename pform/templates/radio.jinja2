{% for item in context.items %}
<div class="{{context.html_type}} {%if context.inline%}inline{%endif%}">
  <label for="{{item['id']}}">
    <input type="{{context.html_type}}"
           {{ context.get_html_attrs(**item)|xmlattr }}>
    {{item['label']}}
  </label>
  {% if item.description %}
  <span class="help-block"><small>{{item['description']|safe}}</small></span>
  {% endif %}
</div>
{% endfor %}
